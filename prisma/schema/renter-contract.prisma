model RenterContract {
    id              String    @id @default(uuid()) @map("id")
    roomHistoryId   String    @map("room_history_id")
    depositBillId   String    @unique @map("deposit_bill_id")
    renterId        String    @map("renter_id")
    totalMonths     Int       @map("total_months")
    billingCycle    Int       @map("billing_cycle")
    fromDate        DateTime  @map("from_date")
    toDate          DateTime  @map("to_date")
    signingDate     DateTime  @map("signing_date")
    exterminateDate DateTime  @map("exterminate_date")
    status          String    @map("status")
    isDeleted       Boolean   @default(false) @map("is_deleted")
    deletedAt       DateTime? @map("deleted_at") // Nullable field
    createdAt       DateTime  @default(now()) @map("created_at")
    updatedAt       DateTime  @updatedAt @map("updated_at")

    roomHistory RoomHistory  @relation(fields: [roomHistoryId], references: [id])
    renter      Renter       @relation(fields: [renterId], references: [id])
    depositBill DepositBill? @relation(fields: [depositBillId], references: [id])

    RenterContractAttachment RenterContractAttachment[]
}
