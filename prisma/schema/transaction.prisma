model Transaction {
    id     String @id @default(uuid()) @map("id")
    billId String @map("bill_id") // Nullable field

    amount          Float           @map("amount")
    transactionType TransactionType @map("transaction_type") // Assuming `transaction_type` is a string

    createdAt DateTime @default(now()) @map("created_at")

    bill Bill @relation(fields: [billId], references: [id])
}
