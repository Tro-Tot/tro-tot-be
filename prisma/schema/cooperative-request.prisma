model CooperativeRequest {
  id                         String                      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  cooperativeRequestStatus   CooperativeRequestStatus
  cooperativeRequestStatusId String                      @unique @map("cooperative_request_status_id")
  landlordId                 String                      @map("landlord_id") @db.Uuid
  managerId                  String                      @map("manager_id") @db.Uuid
  technicalStaffId           String?                     @map("technical_staff_id") @db.Uuid
  contactNumber              String                      @map("contact_number")
  city                       String                      @map("city")
  district                   String                      @map("district")
  street                     String                      @map("street")
  houseNumber                String                      @map("house_number")
  description                String                      @map("description")
  expectROI                  Float?                      @map("expect_roi")
  length                     Float                       @map("length")
  width                      Float                       @map("width")
  expectMeetingDate          String                      @map("expect_meeting_date")
  createdAt                  DateTime?                   @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt                  DateTime?                   @updatedAt @map("updated_at") @db.Timestamptz(6)
  deletedAt                  DateTime?                   @map("deleted_at") @db.Timestamptz(6)
  landlord                   LandLord                    @relation(fields: [landlordId], references: [id])
  manager                    Manager                     @relation(fields: [managerId], references: [id])
  technicalStaff             TechnicalStaff?             @relation(fields: [technicalStaffId], references: [id])
  cooperativeRequestSchedule CooperativeRequestSchedule?
  houseAppraisals            HouseAppraisal[]

  @@map("cooperative_request")
}

enum CooperativeRequestStatus {
  LANDLORD_SENT
  MANAGER_RECEIVED
  MANAGER_CANCELLED
  TECHNICAL_STAFF_ASSIGNED
  TECHNICAL_STAFF_APPRAISED
  MANAGER_REPORTED
}
