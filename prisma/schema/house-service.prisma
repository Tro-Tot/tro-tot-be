model HouseService {
  id        String             @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  serviceId String?            @map("service_id") @db.Uuid
  houseId   String?            @map("house_id") @db.Uuid
  status    HouseServiceStatus @default(AVAILABLE) @map("status")
  isDeleted Boolean            @default(false) @map("is_deleted")
  createdAt DateTime?          @default(now()) @map("created_at") @db.Timestamptz()
  deletedAt DateTime?          @map("deleted_at") @db.Timestamptz()
  updatedAt DateTime?          @updatedAt @map("updated_at") @db.Timestamptz()

  house        House?        @relation(fields: [houseId], references: [id])
  service      Service?      @relation(fields: [serviceId], references: [id])
  roomServices RoomService[]

  @@unique([houseId, serviceId])
  @@map("house_services")
  ServiceSchedule ServiceSchedule?
}

enum HouseServiceStatus {
  AVAILABLE
  UNREGISTRABLE //Can't Register but still work so can make bill
  TERMINATED
  UNAVAILABLE //Can't Register and also can't make bill
}
