{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./modules/mail/templates/**/*",
        "outDir": "./dist/src/",
        "watchAssets": true
      },
      { "include": "i18n/**/*", "outDir": "./dist/src/", "watchAssets": true }
    ]
  }
}
